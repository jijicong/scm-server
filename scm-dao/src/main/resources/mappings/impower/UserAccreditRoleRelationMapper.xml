<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.trc.mapper.impower.UserAccreditRoleRelationMapper">
    <delete id="deleteByUserAccreditId">
        DELETE FROM user_accredit_role_relation WHERE user_accredit_id=#{userAccreditId}
    </delete>

    <select id="selectListByUserAcId" resultType="org.trc.domain.impower.UserAccreditRoleRelation">
          SELECT  id,user_accredit_id AS 'userAccreditId',user_id AS  'userId',role_id AS 'roleId' FROM user_accredit_role_relation
          <where>
              AND user_accredit_id =#{userAccreditId}
              AND is_valid=1
              AND is_deleted=0
          </where>
    </select>
</mapper>